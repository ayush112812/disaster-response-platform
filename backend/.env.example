# Server Configuration
PORT=5000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key  # For admin operations

# Google AI (Gemini) Configuration
# Required for location extraction and image verification
GEMINI_API_KEY=your_gemini_api_key

# Mapbox Configuration
# Required for geocoding disaster locations
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# Twitter API Configuration
# Optional: Will use mock data if not provided
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Caching Configuration
CACHE_TTL=3600  # Cache duration in seconds (default: 1 hour)

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # Time window in milliseconds (default: 15 minutes)
RATE_LIMIT_MAX=100  # Maximum requests per IP per window

# Logging Configuration
LOG_LEVEL=info  # Available levels: error, warn, info, debug

# WebSocket Configuration
WS_PATH=/api/socket.io/  # WebSocket endpoint path

# Security Configuration
JWT_SECRET=your_jwt_secret_key  # Use a strong random string
JWT_EXPIRES_IN=7d  # Token expiration time

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5000  # Comma-separated list of allowed origins
