# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# Server Configuration
PORT=5000
NODE_ENV=development

# Supabase Configuration
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Google AI (Gemini) Configuration
# Get from Google AI Studio: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Mapbox Configuration
# Get from Mapbox account: https://account.mapbox.com/access-tokens/
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_public_token_here

# Twitter API Configuration
# Optional: Will use mock data if not provided
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Caching Configuration
CACHE_TTL=3600  # Cache duration in seconds (default: 1 hour)

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # Time window in milliseconds (default: 15 minutes)
RATE_LIMIT_MAX=100  # Maximum requests per IP per window

# Logging Configuration
LOG_LEVEL=info  # Available levels: error, warn, info, debug

# WebSocket Configuration
WS_PATH=/api/socket.io/  # WebSocket endpoint path

# Security Configuration
# Generate a strong random string (64+ characters)
JWT_SECRET=your_very_long_random_jwt_secret_here_minimum_64_characters
JWT_EXPIRES_IN=7d  # Token expiration time

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5000  # Comma-separated list of allowed origins
