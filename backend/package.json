{
  "name": "disaster-response-platform-api",
  "version": "1.0.0",
  "description": "Backend API for Disaster Response Coordination Platform",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:init": "ts-node scripts/init-db.ts",
    "db:seed": "ts-node scripts/seed-db.ts",
    "db:reset": "npm run db:init && npm run db:seed"
  },
  "keywords": [
    "disaster",
    "response",
    "coordination",
    "emergency",
    "management"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.2",
    "@supabase/supabase-js": "^2.50.0",
    "axios": "^1.5.0",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^6.0.2",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.3",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/disaster-response-platform.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/disaster-response-platform/issues"
  },
  "homepage": "https://github.com/yourusername/disaster-response-platform#readme"
}
