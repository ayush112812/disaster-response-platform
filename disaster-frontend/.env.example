# API Configuration (Development)
VITE_API_URL=http://localhost:5001
VITE_WEBSOCKET_URL=ws://localhost:5001

# Production API Configuration (for Vercel deployment)
# VITE_API_URL=https://your-render-backend.onrender.com
# VITE_WEBSOCKET_URL=wss://your-render-backend.onrender.com

# External Service API Keys
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Feature flags
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_IMAGE_VERIFICATION=true
VITE_ENABLE_SOCIAL_MEDIA_MONITORING=true
VITE_ENABLE_RESOURCE_MANAGEMENT=true

# Cache configuration
VITE_CACHE_DURATION=3600
VITE_ENABLE_OFFLINE_SUPPORT=true

# Map configuration
VITE_DEFAULT_MAP_CENTER_LAT=20.5937
VITE_DEFAULT_MAP_CENTER_LNG=78.9629
VITE_DEFAULT_MAP_ZOOM=5

# UI configuration
VITE_THEME_MODE=light
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_NOTIFICATIONS=true